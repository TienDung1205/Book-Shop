extends ../../layouts/default
include ../../mixins/box-head

block main
    .container.my-3
        .row
            .col-12
                +box-head(pageTitle)
        .row
            each item in products
                .col-3.mb-3
                    .product-item
                            .inner-image
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                )
                            .inner-content
                                h3.inner-title #{item.title}
                                .inner-price-new #{item.newPrice}đ
                                .inner-price-old #{item.price}đ
                                .inner-discount Giảm #{item.discountPercentage}đ